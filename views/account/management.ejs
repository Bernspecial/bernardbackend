<h1 class="management-h1">
    <%= title %>
</h1>

<!-- Display flash message if it exists -->
<div>
    <% if (messages.notice) { %>
        <div class="flash-message">
            <%= messages.notice%>
        </div>
        <% } %>
</div>
<div class="management-div">
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
</div>
<p class="management-p">You're logged in</p>

<div>
    <% if (user) { %>
        <h2 class="management-h2">Welcome <%= user.account_firstname %>
        </h2>

        <% if (user.account_type==='Employee' || user.account_type==='Admin' ) { %>
            <h3 class="management-h3">Inventory Management</h3>
            <p>
                <a class="updatelink" href="/inv/" title="Access Inventory Management">Access Inventory Management</a>
            </p>
            <% } %>

                <p>
                    <a class="management-a" href="/account/update/<%= user.account_id %>" title="Update Account Information">Update
                        Account
                        Information</a>
                </p>
                <% } else { %>
                    <p class="management-p">Please log in to manage your account.</p>
                    <% } %>
</div>